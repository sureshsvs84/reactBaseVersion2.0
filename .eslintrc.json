{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "react-app",   
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-undef": [
            1
        ],
        "no-var": "error",
        "no-multiple-empty-lines": [
            2,
            {
                "max": 1,
                "maxEOF": 0,
                "maxBOF": 0
            }
        ],
        "template-curly-spacing": [
            2,
            "always"
        ],
        "array-bracket-spacing": [
            2,
            "always"
        ],
        "object-curly-spacing": [
            2,
            "always"
        ]
    }
}